{{#if currentActiveTimer}}
    {{d-button
      icon="stop"
      class="btn-large btn-danger"
      action="stop"
      label="time_tracker.stop"
      disabled=loading
    }}
{{else}}
    {{d-button
      icon="play"
      class="btn-large btn-primary"
      action="start"
      label="time_tracker.start"
      disabled=loading
    }}
{{/if}}
